{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                // "/O2",
                "/nologo",
                "/Fo${fileDirname}\\target\\obj\\",
                "/Fe${fileDirname}\\target\\${fileBasenameNoExtension}.exe",
                "${file}",
                "external\\upng\\upng.c",
                "/I",
                "external\\sdl2\\include",
                "/link",
                "/LIBPATH:external\\sdl2\\lib\\x64",
                "SDL2.lib",
                "SDL2main.lib",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}