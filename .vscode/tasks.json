{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"ALL_BUILD"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake template build task"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
					"/Zi",
					"/EHsc",
					"/O2",
					"/nologo",
					"/Fo${fileDirname}\\build\\obj\\",
					"/Fe${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
					"${file}",
					"/I",
					"external\\sdl3\\include",
					"/link",
					"/LIBPATH:external\\sdl3\\build\\RelWithDebInfo",
					"SDL3.lib",
			],
			"options": {
					"cwd": "${fileDirname}"
			},
			"problemMatcher": [
					"$msCompile"
			],
			"group": {
					"kind": "build",
					"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "zig build",
			"type": "shell",
			"command": "zig",
			"args": [
					"build",
					"--release=fast",
					"--summary",
					"all"
			],
			"options": {
					"cwd": "${workspaceRoot}"
			},
			"presentation": {
					"echo": true,
					"reveal": "always",
					"focus": false,
					"panel": "shared",
					"showReuseMessage": true,
					"clear": false
			},
			"problemMatcher": [],
			"group": {
					"kind": "build",
					"isDefault": true
			}
		}
	]
}